      // -----------------------------
      // Home Page Template
      // -----------------------------

      script#home(type="text/template").
        <section class="page home">
          <h1>Featured Projects /</h1>
          <div class="projectContainer">
          {{#each projects}}
            <a href="/project/{{{id}}}">
              <div class="project {{{classes}}}">
                <img src="{{{thumbnail}}}" alt="{{{thumbnailAlt}}}">
                <h2>{{{title}}}</h2>
              </div>
            </a>
          {{/each}}
          </div> <!--projectContainer-->
        </section>

      // -----------------------------
      // Work Page Template
      // -----------------------------

      script#work(type="text/template").
        <h1>Projects /</h1>
        <ul class="projectCategories">
          <li><a href="#" data-class="*" class="current">All</a></li>
          <li>/</li>
          <li><a href="#" data-class=".photos">Photos</a></li>
          <li>/</li>
          <li><a href="#" data-class=".art">Art</a></li>
        </ul>

        <section class="page work">
          {{#each projects}}
            <a href="/project/{{{id}}}">
              <div class="project {{{classes}}}">
                <img src="{{{thumbnail}}}" alt="{{{thumbnailAlt}}}">
                <h2>{{{title}}}</h2>
            </a>
            </div>
          {{/each}}
        </section>

      // -----------------------------
      // About Page Template
      // -----------------------------

      script#about(type="text/template").
        <div class="page about">{{{content}}}</div>
        <div class="aboutWrapper">
          <h2>Hi, my name is Leah de Vries</h2>
          <p>I’m an interactive designer, based out of Toronto with a background in graphic design &amp; photography. I focus on combining the user experience with creative visual design. I am passionate about solving problems through design &amp; learning about web accessibility. I thrive on continuous learning, I feel that it is the only way to embrace growth and development.</p>
          <p>When I’m not working on projects, you can find me drawing, taking photos, cruisin’ the streets of Toronto on my bicycle or hanging out with my two furry faced kitty friends, Ron and Crook.</p>
        </div>

      // -----------------------------
      // Project Page Template
      // -----------------------------

      script#project(type="text/template").
        <div class="page">
          <a href="/work">Back</a>
          <h2>{{{title}}}</h2>
          <img src="{{{thumbnail}}}" alt="{{{thumbnailAlt}}}">
          {{{content}}}
        </div>

      // -----------------------------
      // Contact Page Template
      // -----------------------------

      script#contact(type="text/template").
        <div class="page contact">
          {{{content}}}
          <h3>Email:</h3>
          <input type="text" class="email">
          <h3>Subject:</h3>
          <input type="text" class="subject">
          <h3>Description:</h3>
          <textarea class="text"></textarea>
          <button class="submit">Send</button>
        </div>

      // -----------------------------
      // Libraries
      // -----------------------------

      script(type="text/javascript", src="http://code.jquery.com/jquery-2.1.1.min.js")

      script(type='text/javascript', src="assets/scripts/jquery.sidr.min.js")

      script(type='text/javascript', src="assets/scripts/jquery.isotope.js")

      script(type="text/javascript", src="http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.7.0/underscore.js")

      script(type="text/javascript", src="http://cdnjs.cloudflare.com/ajax/libs/backbone.js/1.1.2/backbone.js")

      script(type="text/javascript", src="http://cdnjs.cloudflare.com/ajax/libs/handlebars.js/2.0.0/handlebars.js")


      // -----------------------------
      // Application
      // -----------------------------

      script(type="text/javascript", src="assets/scripts/main.js")
