  body
  
    div.wrapper

      header.header

        video#bgvid(autoplay='', loop='', poster='assets/images/logo_black.png', width="1280px")
          source(src='assets/images/test.mp4', type='video/mp4' width="1280px")

        nav
          img(src='assets/images/logo_black.png', alt='logo')
        
          ul.mainNav
            li: a(href="/") Home

            li /

            li: a(href="/work") Work

            li /

            li: a(href="/about") About

            li /

            li: a(href="/contact") Contact

